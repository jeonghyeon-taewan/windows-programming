<Window x:Class="ProjectFileManage.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectFileManage"
        mc:Ignorable="d"
        Title="InputDialog" Height="150" Width="300">
    <StackPanel>
        <TextBlock x:Name="QuestionTextBlock" Text="Question" Margin="10"/>
        <TextBox x:Name="InputTextBox" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="10" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Margin="10" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
