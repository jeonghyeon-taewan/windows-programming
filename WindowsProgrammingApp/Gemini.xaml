<Window x:Class="WindowsProgrammingApp.Gemini"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gemini" Height="600" Width="600">
    <StackPanel>
        <TextBox Name="InputTextBlock" Text="입력" 
                   VerticalAlignment="Top" Margin="10"/>
        <RichTextBox Name="OutputRichTextBox" VerticalAlignment="Center" Margin="10" IsReadOnly="True" />
        <Button x:Name="CopyTextButton" Content="Search" VerticalAlignment="Bottom" Margin="10" Click="CopyTextButton_Click"/>
        <RichTextBox  Height="300" />
    </StackPanel>
</Window>
