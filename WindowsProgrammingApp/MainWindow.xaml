<Window x:Class="WindowsProgrammingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsProgrammingApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
 
    
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <Button Content="이미지 삽입" Click="InsertImage_Click"/>
  
            <Button Content="save" Click="Save"/>
            <Button Content="load" Click="Load"/>
            <RichTextBox Name="richTextBox" 
                         MouseWheel="rtb_PreviewMouseWheel"
                   
                         VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                             IsDocumentEnabled="True">
                    <FlowDocument x:Name="flow">
                        <Paragraph>
                        <Run Text="텍스트를 입력하세요."/>
                    </Paragraph>
                 

                </FlowDocument>
                </RichTextBox>
                

            </StackPanel>
        </ScrollViewer>




</Window>
